GLOBAL:
  company_name: "Valter Demo Corp"
  currency_symbol: "$"
  locale: "en_US"
  port: 8000

CLOUDS:
  - name: "Operator"
    icon: "user"
    fields:
      - key: "handle"
        type: "string"
        required: true
      - key: "role"
        type: "string"
        required: false

  - name: "Client"
    icon: "briefcase"
    fields:
      - key: "name"
        type: "string"
        required: true
      - key: "status"
        type: "select"
        options: ["Active", "Lead", "Churned"]
        required: true

ISLANDS:
  - name: "Project"
    root_path: "./dev-projects-folder/*"  
    meta_file: "meta.yaml" 
    relations:
      - field: "operator"
        target_cloud: "Operator"
      - field: "client"
        target_cloud: "Client"
    aggregations:
      - name: "total_tasks"
        path: "VALTER-INTERNAL/RADNI-NALOZI/*.md"
        target_field: "id"
        logic: "count"
