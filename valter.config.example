# VALTER CONFIGURATION TEMPLATE (PRODUCTION)
# ---------------------------------------------------------
# 1. INSTALLATION:
#    This file is copied to ~/.valter/valter.config
#    Edit 'root_path' below to point to your real data.
# ---------------------------------------------------------

GLOBAL:
  company_name: "My Company"
  currency_symbol: "â‚¬"
  locale: "en_US"
  port: 9090

CLOUDS:
  - name: "Operator"
    icon: "user"
    fields:
      - key: "handle"
        type: "string"
        required: true

  - name: "Client"
    icon: "briefcase"
    fields:
      - key: "name"
        type: "string"
        required: true

ISLANDS:
  - name: "Project"
    # CHANGE THIS TO YOUR ACTUAL DATA FOLDER
    # Example: "/Users/username/Documents/Projects/*"
    root_path: "/PATH/TO/YOUR/DATA/*"  
    meta_file: "meta.yaml" 
    relations:
      - field: "operator"
        target_cloud: "Operator"
      - field: "client"
        target_cloud: "Client"
    aggregations:
      - name: "total_tasks"
        path: "INTERNAL/WorkOrders/*.md"
        target_field: "id"
        logic: "count"
